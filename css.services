body {
  font-family: Arial, sans-serif;
  background: #f4f4f4;
  color: #333;
  margin: 0;
  padding: 0;
}

header {
  background-color: #333;
  color: #ccccfff;
  padding: 1rem;
  text-align: center;
}

nav {
  margin-top: 10px;
}

nav a {
  margin: 0 10px;
  color: #ccffcc;
  text-decoration: none;
}

main {
  padding: 2rem;
}

footer {
  background: #222;
  color: #eee;
  text-align: center;
  padding: 1rem;
}
